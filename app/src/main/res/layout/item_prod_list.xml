<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap"
    android:padding="5dp"
    >
  <android.support.v7.widget.CardView
      android:id="@+id/cardView"
      style="@style/MatchWrap"
      android:clickable="true"
      android:foreground="?android:attr/selectableItemBackground"
      app:cardCornerRadius="5dp"
      app:cardElevation="2dp"
      app:contentPadding="2dp"
      >
    <RelativeLayout
        style="@style/MatchWrap"
        android:padding="5dp"
        >
      <TextView
          android:id="@+id/tv_prod_name"
          style="@style/WrapWrap"
          android:text="名称"
          android:textSize="18sp"
          android:textColor="@color/primary_text"
          />
      <TextView
          android:id="@+id/tv_prod_status"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:textColor="@color/colorAccent"
          android:text="已停售"
          />
      <TextView
          android:id="@+id/tv_prod_price"
          style="@style/WrapWrap"
          android:layout_below="@id/tv_prod_name"
          android:layout_marginTop="10dp"
          android:textColor="@color/colorAccent"
          android:gravity="center"
          />
      <TextView
          android:id="@+id/tv_checkout_unit"
          style="@style/WrapWrap"
          android:layout_toRightOf="@id/tv_prod_price"
          android:layout_alignBottom="@id/tv_prod_price"
          android:textSize="10sp"
          android:gravity="center"
          />
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</RelativeLayout>